
<%= form_for([@project, @comment]) do |f| %>
  <% if @comment.errors.any? %>
    <h2>Warning: <%= pluralize(@comment.errors.count, "error") %></h2>

    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :message, "Leave a comment!" %> <br>
    <%= f.text_area :message, cols: "30", rows: "10" %>
  </p>

  <p>
    <%= f.submit "Add Comment!" %>
  </p>
<% end %>
