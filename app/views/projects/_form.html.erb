<%= form_for(@project, html: {multipart: true}) do |f| %>

<% if @project.errors.any? %>

<h2>Warning: <%= pluralize(@project.errors.count, "error") %> </h2>

<ul>
  <% @project.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<% end %>


  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>

  <div>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <%= f.submit %>
<% end %>
